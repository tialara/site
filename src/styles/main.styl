// =============================================================================
// MAIN STYLES - BEM + Open Props + Stylus
// =============================================================================

@import url('https://unpkg.com/open-props')

// =============================================================================
// BASE
// =============================================================================

*
  box-sizing border-box

html
  scroll-behavior smooth

body
  margin 0
  font-family var(--font-sans)
  line-height var(--font-lineheight-3)
  color var(--gray-8)
  background var(--gray-0)
  width 100%
  max-width 100vw
  overflow-x hidden

// =============================================================================
// LAYOUT
// =============================================================================

.container
  max-width 1200px
  margin-inline auto
  padding-inline var(--size-4)
  width 100%
  
  @media (max-width: 768px)
    padding-inline var(--size-3)

// =============================================================================
// HEADER
// =============================================================================

.header
  background var(--gray-0)
  box-shadow var(--shadow-2)
  position fixed
  top 0
  width 100%
  z-index var(--layer-5)
  
  &__container
    display flex
    justify-content space-between
    align-items center
    padding-block var(--size-3)
    position relative

.logo
  display inline-flex
  align-items center
  gap var(--size-2)
  text-decoration none
  z-index var(--layer-5)

.logo__img
  height 40px
  width auto
  display block

.menu-toggle
  display none
  flex-direction column
  cursor pointer
  padding var(--size-2)
  z-index var(--layer-5)
  background none
  border none
  
  @media (max-width: 768px)
    display flex
  
  &__bar
    width 25px
    height 3px
    background var(--gray-7)
    margin 3px 0
    transition all 0.3s ease
    border-radius var(--radius-1)
  
  &--active &__bar
    &:nth-child(1)
      transform rotate(45deg) translate(6px, 6px)
    &:nth-child(2)
      opacity 0
    &:nth-child(3)
      transform rotate(-45deg) translate(6px, -6px)

.nav
  @media (max-width: 768px)
    position fixed
    top 0
    left -100%
    width 100%
    height 100vh
    background var(--gray-0)
    display flex
    align-items center
    justify-content center
    transition left 0.3s ease-in-out
    z-index var(--layer-4)
    
    &--active
      left 0
  
  &__list
    display flex
    list-style none
    gap var(--size-5)
    margin 0
    padding 0
    
    @media (max-width: 768px)
      flex-direction column
      gap var(--size-6)
      text-align center
  
  &__link
    color var(--gray-7)
    text-decoration none
    font-weight var(--font-weight-5)
    transition color 0.3s ease
    font-size var(--font-size-3)
    
    @media (max-width: 768px)
      font-size var(--font-size-5)
      
    &:hover
      color var(--red-6)
  
  &__cta
    margin-top var(--size-4)
    
    @media (min-width: 769px)
      display none

// =============================================================================
// MAIN
// =============================================================================

.main
  margin-top var(--size-10)
  min-height calc(100vh - var(--size-10))
  display flex
  flex-direction column

// =============================================================================
// SECTIONS
// =============================================================================

.section
  padding-block var(--size-8)
  flex-shrink 0
  
  &--alt
    background var(--gray-1)
  
  @media (max-width: 768px)
    padding-block var(--size-6)

// =============================================================================
// HERO
// =============================================================================

.hero
  display flex
  align-items center
  justify-content center
  min-height 70vh
  text-align center
  padding-top var(--size-6)
  
  .container
    display flex
    flex-direction column
    align-items center
    justify-content center
  
  &__title
    font-size var(--font-size-8)
    font-weight var(--font-weight-7)
    color var(--gray-8)
    margin-bottom var(--size-3)
    
    @media (max-width: 768px)
      font-size var(--font-size-7)
  
  &__subtitle
    font-size var(--font-size-4)
    color var(--gray-6)
    margin-bottom var(--size-5)
    max-width 600px
    
    @media (max-width: 768px)
      font-size var(--font-size-3)

// =============================================================================
// SERVICES
// =============================================================================

.services
  &__container
    max-width 1000px
    margin 0 auto
    
  &__title
    font-size var(--font-size-6)
    font-weight var(--font-weight-6)
    color var(--gray-8)
    margin-bottom var(--size-5)
    text-align center
    
    @media (max-width: 768px)
      font-size var(--font-size-5)
  
  &__grid
    display grid
    grid-template-columns repeat(auto-fit, minmax(250px, 1fr))
    gap var(--size-4)
    
    @media (max-width: 768px)
      grid-template-columns 1fr
      gap var(--size-3)

.service-card
  background var(--gray-0)
  padding var(--size-5)
  border-radius var(--radius-3)
  box-shadow var(--shadow-2)
  text-align center
  transition transform var(--animation-fade-in)
  display flex
  flex-direction column
  align-items center
  
  @media (max-width: 768px)
    padding var(--size-4)
  
  &:hover
    transform translateY(calc(-1 * var(--size-1)))
    box-shadow var(--shadow-4)
  
  &__icon
    font-size var(--font-size-8)
    margin-bottom var(--size-3)
    display block
    
    @media (max-width: 768px)
      font-size var(--font-size-6)
  
  &__title
    font-size var(--font-size-4)
    font-weight var(--font-weight-6)
    color var(--gray-8)
    margin-bottom var(--size-2)
    
    @media (max-width: 768px)
      font-size var(--font-size-3)
  
  &__text
    font-size var(--font-size-3)
    color var(--gray-6)
    flex-grow 1
    
    @media (max-width: 768px)
      font-size var(--font-size-2)

// =============================================================================
// ABOUT
// =============================================================================

.about
  text-align center
  
  .container
    max-width 800px
  
  &__title
    font-size var(--font-size-6)
    font-weight var(--font-weight-6)
    color var(--gray-8)
    margin-bottom var(--size-5)
    
    @media (max-width: 768px)
      font-size var(--font-size-5)
  
  &__lead
    font-size var(--font-size-4)
    color var(--gray-6)
    margin-bottom var(--size-3)
    
    @media (max-width: 768px)
      font-size var(--font-size-3)
  
  &__text
    font-size var(--font-size-3)
    color var(--gray-6)
    
    @media (max-width: 768px)
      font-size var(--font-size-2)

// =============================================================================
// CONTACT
// =============================================================================

.contact
  &__title
    font-size var(--font-size-6)
    font-weight var(--font-weight-6)
    color var(--gray-8)
    margin-bottom var(--size-5)
    text-align center
    
    @media (max-width: 768px)
      font-size var(--font-size-5)
  
  &__form
    max-width 600px
    margin 0 auto

// =============================================================================
// FORM
// =============================================================================

.form
  display flex
  flex-direction column
  gap var(--size-4)
  
  &__group
    display flex
    flex-direction column
  
  &__label
    display block
    margin-bottom var(--size-1)
    font-weight var(--font-weight-6)
    color var(--gray-8)
  
  &__input
  &__textarea
    width 100%
    padding var(--size-2)
    border var(--border-size-2) solid var(--gray-3)
    border-radius var(--radius-2)
    font-size var(--font-size-2)
    transition border-color var(--animation-fade-in)
    font-family inherit
    
    &:focus
      outline none
      border-color var(--red-6)
  
  &__textarea
    resize vertical
    min-height var(--size-9)
    
  &__submit
    align-self center
    margin-top var(--size-2)

// =============================================================================
// BUTTON
// =============================================================================

.btn
  display inline-block
  padding var(--size-3) var(--size-6)
  background linear-gradient(135deg, var(--red-6), var(--red-7))
  color var(--gray-0)
  text-decoration none
  border-radius var(--radius-3)
  font-weight var(--font-weight-6)
  transition all 0.3s ease
  border none
  cursor pointer
  font-size var(--font-size-3)
  text-align center
  box-shadow var(--shadow-2)
  position relative
  overflow hidden
  
  &::before
    content ''
    position absolute
    top 0
    left -100%
    width 100%
    height 100%
    background linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent)
    transition left 0.5s ease
  
  &:hover
    background linear-gradient(135deg, var(--red-7), var(--red-8))
    transform translateY(-2px)
    box-shadow var(--shadow-4)
    
    &::before
      left 100%
  
  &--secondary
    background linear-gradient(135deg, var(--gray-6), var(--gray-7))
    
    &:hover
      background linear-gradient(135deg, var(--gray-7), var(--gray-8))
  
  &--small
    padding var(--size-2) var(--size-4)
    font-size var(--font-size-2)

// =============================================================================
// FOOTER
// =============================================================================

.footer
  background var(--gray-8)
  color var(--gray-0)
  text-align center
  padding-block var(--size-5)
  margin-top auto
  
  &__text
    margin 0
    font-size var(--font-size-2)

.site-build-info
  margin-top var(--size-2)
  font-size 0.8rem
  color rgba(255,255,255,0.65)
  filter grayscale(100%)
  a
    color inherit
    text-decoration underline
    &:hover
      text-decoration none

// =============================================================================
// MAP STYLES
// =============================================================================

#map
  z-index 1
  
@media (max-width: 768px)
  #map
    height 320px !important

// =============================================================================
// UTILITIES
// =============================================================================
// =============================================================================

.text-center
  text-align center